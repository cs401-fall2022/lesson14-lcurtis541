{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": "google",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "max-len": ["error", {"code": 125, "tabWidth": 4, "ignoreUrls": true}],
        "indent": ["error",4]
    },
    "root": true
}
